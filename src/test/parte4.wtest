test "Accion : REcolectar material oculto"{
		var lata =new Lata(1)
		
		var accion = new RecolectarMaterialOculto([lata])
		var pa=new ParasitoAlienigena([accion])
		
		assert.equals([],morty.mochila())
		morty.recolectar(pa)	
		assert.equals([pa,lata],morty.mochila())
}
 